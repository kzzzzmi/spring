package com.spring.study.service.auth;

import org.springframework.beans.factory.annotation.Autowired;

import com.spring.study.domain.user.UserRepository;
import com.spring.study.web.dto.SignupReqDto;

public class AuthServiceImpl implements AuthService {

	@Autowired
	private UserRepository userRepository;
	
	@Override
	public boolean usernameCheck(SignupReqDto signupReqDto) {
		int idCheckCount = userRepository.idCheck(username);
		if(idCheckCount == 0) {
			return true;
		} else {
			return false;
		}
	}

	
}
